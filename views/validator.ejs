<%- include("./partials/header") %>

<!-- Styling -->
<link rel="stylesheet" href="/login.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="container" id="container">
	<div class="form-container sign-in-container">
		<form action="/validator" method="POST">
			<h1>Sign in</h1>
		
			<input type="text" placeholder="Username" name="username" />
			<input type="password" placeholder="Password" name="password" />

			<button type="submit">Sign In</button>

			<% if (typeof message !== 'undefined') { %>
				<p><%= message %></p>
            <% } %>

		</form>
	</div>
	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-right">
				<h1>ShieldSentry Demo</h1>
				<br />
				<button class="ghost" onclick="window.location.href='/vulnerable'">Disable Validator</button>
				<br />
				<button class="ghost" onclick="window.location.href='/'">Enable ShieldSentry</button>
			</div>
		</div>
	</div>
</div>

<%- include("./partials/footer") %>
